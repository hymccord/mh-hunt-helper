version:            '3'
services:

# mhct server
  mhct:
    image:          richarvey/nginx-php-fpm:1.10.3
    container_name: mhct
    volumes:
      - ./:/var/www/html
    networks:
      - internal
    environment:
      WEBROOT:      /var/www/html/src
      ERRORS:       1
      ENABLE_XDEBUG: 1
      XDEBUG_CONFIG: client_host=host.docker.internal client_port=9003
    ports:
      - "80:80"

# mh-hunt-helper DB
  mhct-db:
    image:          tsitu/mhct-db-docker:latest
    container_name: mhct-db
    ports:
      - "3306:3306"

  # mhct-converter DB
  mhct-converter:
    image:          tsitu/mhct-db-docker:converter
    container_name: mhct-converter
    ports:
      - "3307:3306"

# # mhct-mapspotter DB
#  mhct-mapspotter:
#    image:          tsitu/mhct-db-docker:mapspotter
#    container_name: mhct-mapspotter
#    hostname:       mhct-mapspotter

networks:
  internal:
    driver: bridge
